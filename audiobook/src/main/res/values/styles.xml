<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowActivityTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:ignore="NewApi">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:ignore="NewApi">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorAccentDark">@color/accentDark</item>
        <item name="android:imageButtonStyle">@style/LightButtonStyle</item>
        <item name="theme_name">@string/pref_theme_light</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/light_primary_dark
        </item>

        <!-- toolbar -->
        <item name="toolbar_popup_theme">@style/toolbar_popup_light</item>

        <!-- BookPlay -->
        <item name="book_play_rewind">@drawable/ic_fast_rewind_grey600_36dp</item>
        <item name="book_play_fast_forward">@drawable/ic_fast_forward_grey600_36dp</item>
        <item name="book_play_next">@drawable/ic_skip_next_grey600_36dp</item>
        <item name="book_play_previous">@drawable/ic_skip_previous_grey600_36dp</item>

        <!-- FolderChoose -->
        <item name="folder_choose_folder">@drawable/ic_folder_grey600_48dp</item>
        <item name="folder_choose_track">@drawable/ic_audiotrack_grey600_48dp</item>
        <item name="folder_choose_up">@drawable/ic_arrow_up_grey600_48dp</item>

        <!-- Folder Overview -->
        <item name="folder_overview_trash">@drawable/ic_delete_grey600_24dp</item>
        <item name="folder_overview_multi_folder">@drawable/ic_folder_multiple_grey600_48dp</item>
        <item name="background_overlay">@color/primary_text_disabled_material_light</item>

        <!-- BookEditDialog -->
        <item name="edit_next">@drawable/ic_navigate_next_grey600_36dp</item>
        <item name="edit_prev">@drawable/ic_navigate_before_grey600_36dp</item>

        <!-- Bookmark -->
        <item name="bookmark_add_button">@drawable/ic_add_circle_outline_grey600_36dp</item>
        <item name="more">@drawable/ic_more_vert_grey600_24dp</item>

        <item name="android:seekBarStyle">@style/seek_style</item>

        <item name="text_primary">@color/light_text_primary</item>
        <item name="text_secondary">@color/light_text_secondary</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowActivityTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:ignore="NewApi">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:ignore="NewApi">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorAccentDark">@color/accentDark</item>
        <item name="android:imageButtonStyle">@style/DarkButtonStyle</item>
        <item name="theme_name">@string/pref_theme_dark</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/black</item>

        <!-- toolbar -->
        <item name="toolbar_popup_theme">@style/toolbar_popup_dark</item>

        <!-- BookPlay -->
        <item name="book_play_rewind">@drawable/ic_fast_rewind_white_36dp</item>
        <item name="book_play_fast_forward">@drawable/ic_fast_forward_white_36dp</item>
        <item name="book_play_next">@drawable/ic_skip_next_white_36dp</item>
        <item name="book_play_previous">@drawable/ic_skip_previous_white_36dp</item>

        <!-- FolderChoose -->
        <item name="folder_choose_folder">@drawable/ic_folder_white_48dp</item>
        <item name="folder_choose_track">@drawable/ic_audiotrack_white_48dp</item>
        <item name="folder_choose_up">@drawable/ic_arrow_up_white_48dp</item>

        <!-- Folder Overview -->
        <item name="folder_overview_trash">@drawable/ic_delete_white_24dp</item>
        <item name="folder_overview_multi_folder">@drawable/ic_folder_multiple_white_48dp</item>
        <item name="background_overlay">@color/primary_text_disabled_material_dark</item>

        <!-- BookEditDialog -->
        <item name="edit_next">@drawable/ic_navigate_next_white_36dp</item>
        <item name="edit_prev">@drawable/ic_navigate_before_white_36dp</item>

        <!-- Bookmark -->
        <item name="bookmark_add_button">@drawable/ic_add_circle_outline_white_36dp</item>
        <item name="more">@drawable/ic_more_vert_white_24dp</item>

        <item name="android:seekBarStyle">@style/seek_style</item>

        <item name="text_primary">@color/dark_text_primary</item>
        <item name="text_secondary">@color/dark_text_secondary</item>
    </style>

    <style name="DarkButtonStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/dark_image_button_background</item>
    </style>

    <style name="LightButtonStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/light_image_button_background</item>
    </style>

    <style name="fab_label_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="toolbar_style" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">?attr/toolbar_popup_theme</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>

    <style name="toolbar_popup_light" parent="@style/ThemeOverlay.AppCompat.Light" />

    <style name="toolbar_popup_dark" parent="@style/ThemeOverlay.AppCompat" />

    <style name="seek_style">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_material</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_material
        </item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:mirrorForRtl" tools:ignore="NewApi">true</item>
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>

        <item name="android:imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="android:seekBarStyle">@style/seek_style</item>
    </style>

    <style name="LightTheme" parent="BaseTheme">
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorAccentDark">@color/accentDark</item>
        <item name="theme_name">@string/pref_theme_light</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/light_primary_dark
        </item>
        <item name="icon_color">@color/light_icon_enabled</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="background_overlay">@color/primary_text_disabled_material_light</item>
        <item name="android:textColor">@color/light_text_primary</item>
        <item name="android:textColorPrimary">@color/light_text_primary</item>
        <item name="android:textColorSecondary">@color/light_text_secondary</item>
    </style>

    <style name="DarkTheme" parent="BaseTheme">
        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorAccentDark">@color/accentDark</item>
        <item name="theme_name">@string/pref_theme_dark</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/black</item>
        <item name="icon_color">@color/dark_icon_enabled</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
        <item name="background_overlay">@color/primary_text_disabled_material_dark</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
    </style>

    <style name="ImageButtonStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">?attr/icon_color</item>
    </style>

    <style name="TintedImageViewStyle">
        <item name="android:tint">?attr/icon_color</item>
    </style>

    <style name="fab_label_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="toolbar_style" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">?attr/toolbar_popup_theme</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>


    <style name="seek_style">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_material</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_material
        </item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:mirrorForRtl" tools:ignore="NewApi">true</item>
    </style>
</resources>